<%- model_class = Posts -%>
<div class="page-header">
  <h1><%=t '.title', :default => Posts %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @posts.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:topic) %></dt>
      <dd><pre class="prettyprint"><%= @posts.topic %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @posts.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:keywords) %></dt>
      <dd><pre class="prettyprint"><%= @posts.keywords %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_posts_path(@posts), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              posts_path(@posts),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

