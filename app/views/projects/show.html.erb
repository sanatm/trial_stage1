<%- model_class = Projects -%>
<div class="page-header">
  <h1><%=t '.title', :default => Projects %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:posttitle) %></dt>
      <dd><pre class="prettyprint"><%= @projects.posttitle %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:posttopic) %></dt>
      <dd><pre class="prettyprint"><%= @projects.posttopic %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @projects.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:postkeywords) %></dt>
      <dd><pre class="prettyprint"><%= @projects.postkeywords %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:deadline) %></dt>
      <dd><pre class="prettyprint"><%= @projects.deadline %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:milestone) %></dt>
      <dd><pre class="prettyprint"><%= @projects.milestone %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              projects_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_projects_path(@projects), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              projects_path(@projects),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

