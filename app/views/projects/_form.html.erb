<%= form_for @projects, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :posttitle, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :posttitle, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :posttopic, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :posttopic, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :postkeywords, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :postkeywords, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deadline, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :deadline, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :milestone, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :milestone, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  projects_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
