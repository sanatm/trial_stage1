<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :posttitle %>
    <%= f.input :posttopic %>
    <%= f.input :description %>
    <%= f.association :user %>
    <%= f.input :postkeywords %>
    <%= f.input :deadline %>
    <%= f.input :milestone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
